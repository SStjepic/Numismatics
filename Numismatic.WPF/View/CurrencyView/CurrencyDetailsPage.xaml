<Window x:Class="Numismatic.WPF.View.CurrencyView.CurrencyDetailsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Numismatic.WPF.View.CurrencyView"
        mc:Ignorable="d"
        Title="Currency" Height="450" Width="810"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid  Background="#FF151735">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.8*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3.5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" Content="Currency" Style="{DynamicResource LabelTitleStyle}"></Label>

        <Label Content="Name" Grid.Row="1" Grid.Column="0" Style="{DynamicResource LabelStyle}" VerticalAlignment="Top"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,19" Style="{DynamicResource TextBoxInputStyle}"
             Text="{Binding Path=CurrencyCrudViewModel.CurrentCurrency.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                Validation.ErrorTemplate="{DynamicResource ValidationTemplate}"/>

        <Label Content="Hunderth part name" Grid.Row="2" Grid.Column="0" Style="{DynamicResource LabelStyle}" VerticalAlignment="Top"/>
        <TextBox Grid.Row="2" Grid.Column="1"  Style="{DynamicResource TextBoxInputStyle}"
             Text="{Binding Path=CurrencyCrudViewModel.CurrentCurrency.HunderthPartName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
             Validation.ErrorTemplate="{DynamicResource ValidationTemplate}" Margin="0,0,0,19"></TextBox>

        <Label Content="Currency code" Grid.Row="3" Grid.Column="0" Style="{DynamicResource LabelStyle}" VerticalAlignment="Top" ></Label>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,19" Style="{DynamicResource TextBoxInputStyle}"
             Text="{Binding Path=CurrencyCrudViewModel.CurrentCurrency.Code, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                Validation.ErrorTemplate="{DynamicResource ValidationTemplate}"></TextBox>

        <Label Content="Country" Grid.Row="4" Grid.Column="0" Style="{DynamicResource LabelStyle}" VerticalAlignment="Top" ></Label>
        <ComboBox Name="CountryComboBox" Grid.Column="1" Grid.Row="4" SelectedItem="{Binding NationalCurrencyCrudViewModel.SelectedCountry}" ItemsSource="{Binding NationalCurrencyCrudViewModel.AllCountries}" DisplayMemberPath="Name" Margin="0,0,0,19"></ComboBox>
        <Button  x:Name="SelectCountryButton" Grid.Column="2" Grid.Row="4" Style="{DynamicResource SaveButtonStyle}" Margin="0,0,0,19" Command="{Binding NationalCurrencyCrudViewModel.SelectCountryCommand}">Select</Button>
        <ListBox x:Name="CountryLB" Grid.Row="5" Grid.Column="1" Margin="0,0,0,15" Grid.RowSpan="3" 
             ItemsSource="{Binding NationalCurrencyCrudViewModel.SelectedCountries}"
            DisplayMemberPath="Name" SelectionMode="Single" Validation.ErrorTemplate="{DynamicResource ValidationTemplate}">

        </ListBox>

        <Grid Grid.Row="8" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="Save" Grid.Row="0" Grid.Column="0" Style="{DynamicResource SaveButtonStyle}" Click="Save"/>
            <Button Content="Exit" Grid.Row="0" Grid.Column="1" Style="{DynamicResource ExitButtonStyle}" Click="Exit"></Button>
        </Grid>
    </Grid>
</Window>
