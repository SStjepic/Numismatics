<Page x:Class="Numismatic.WPF.View.CoinView.CoinPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Numismatic.WPF.View.CoinView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoinPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Label Content="Coin page" Grid.Row="0" Grid.Column="0" Style="{DynamicResource TitleStyle}"></Label>
        
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Background="#FF151735" MaxHeight="70">
                <Button  Content="Add" HorizontalContentAlignment="Center" Style="{DynamicResource CrudButtonStyle}"  Width="130" Command="{Binding CoinDisplayViewModel.AddCoinCommand}"/>
                <Button  Content="Update" HorizontalContentAlignment="Center" Style="{DynamicResource CrudButtonStyle}" Width="130" Command="{Binding CoinDisplayViewModel.UpdateCoinCommand}"/>
                <Button Content="Delete" HorizontalContentAlignment="Center" Style="{DynamicResource CrudButtonStyle}" Width="130" Command="{Binding CoinDisplayViewModel.DeleteCoinCommand}"/>
            </StackPanel>
        </Grid>


        <DataGrid Grid.Row="3"
            ItemsSource="{Binding CoinDisplayViewModel.CurrentCoins, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding CoinDisplayViewModel.SelectedCoin, UpdateSourceTrigger=PropertyChanged}"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
            MouseDoubleClick="ShowCoin"
            HeadersVisibility="Column"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Value" Width="*" Binding="{Binding Value}"
                                     ElementStyle="{StaticResource DataGridTextStyle}"></DataGridTextColumn>
                <DataGridTextColumn Header="Currency" Width="*" Binding="{Binding Currency.Name}"
                                     ElementStyle="{StaticResource DataGridTextStyle}"></DataGridTextColumn>
                <DataGridTextColumn Header="Issue year" Width="*" Binding="{Binding Year}"
                                     ElementStyle="{StaticResource DataGridTextStyle}"></DataGridTextColumn>
                <DataGridTextColumn Header="Era" Width="*" Binding="{Binding Era}"
                                     ElementStyle="{StaticResource DataGridTextStyle}"></DataGridTextColumn>
                <DataGridTextColumn Header="Country" Width="*" Binding="{Binding Country.Name}"
                                     ElementStyle="{StaticResource DataGridTextStyle}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        </Grid>
</Page>
