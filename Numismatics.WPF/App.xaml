<Application x:Class="Numismatics.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Numismatics.WPF" 
             xmlns:conv="clr-namespace:Numismatics.WPF.ViewModels.Converters" >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/DefaultStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:ImagePathToBitmapConverter x:Key="ImagePathToBitmapConverter" />

            <BitmapImage x:Key="SearchIcon" UriSource="/Images/SearchIcon.png"/>
            <BitmapImage x:Key="RefreshIcon" UriSource="/Images/RefreshIcon.png"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
