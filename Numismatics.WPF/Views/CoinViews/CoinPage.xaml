<Page x:Class="Numismatics.WPF.View.CoinView.CoinPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Numismatics.WPF.View.CoinView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Coin page">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>

        <Label Content="Coin page" Grid.Row="0" Grid.Column="0" Style="{DynamicResource TitleStyle}"></Label>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" MaxHeight="70">
                <Button  Content="Add" HorizontalContentAlignment="Center" Style="{DynamicResource CrudButtonStyle}"  Width="130" Command="{Binding CoinDisplayViewModel.AddCoinCommand}"/>
                <Button  Content="Update" HorizontalContentAlignment="Center" Style="{DynamicResource CrudButtonStyle}" Width="130" Command="{Binding CoinDisplayViewModel.UpdateCoinCommand}"/>
                <Button Content="Delete" HorizontalContentAlignment="Center" Style="{DynamicResource CrudButtonStyle}" Width="130" Command="{Binding CoinDisplayViewModel.DeleteCoinCommand}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.35*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="{Binding CoinDisplayViewModel.TotalCoinsText, UpdateSourceTrigger=PropertyChanged}" 
           Style="{DynamicResource LabelTitleStyle}" Foreground="#FF151735"/>
        </Grid>

        <DataGrid Grid.Row="3"
            ItemsSource="{Binding CoinDisplayViewModel.CurrentCoins, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding CoinDisplayViewModel.SelectedCoin, UpdateSourceTrigger=PropertyChanged}"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" 
            MouseDoubleClick="ShowCoin"
            HeadersVisibility="Column"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Value" Width="*" Binding="{Binding Value}"
                                     ElementStyle="{StaticResource DataGridTextStyle}" CanUserSort="False"></DataGridTextColumn>
                <DataGridTextColumn Header="Currency" Width="*" Binding="{Binding Currency.Name}"
                                     ElementStyle="{StaticResource DataGridTextStyle}" CanUserSort="False"></DataGridTextColumn>
                <DataGridTextColumn Header="Unit" Width="*" Binding="{Binding UnitName}"
                                     ElementStyle="{StaticResource DataGridTextStyle}" CanUserSort="False"></DataGridTextColumn>
                <DataGridTextColumn Header="Issue year" Width="0.5*" Binding="{Binding Year}"
                                     ElementStyle="{StaticResource DataGridTextStyle}" CanUserSort="False"></DataGridTextColumn>
                <DataGridTextColumn Header="Era" Width="0.2*" Binding="{Binding Era}"
                                     ElementStyle="{StaticResource DataGridTextStyle}" CanUserSort="False"></DataGridTextColumn>
                <DataGridTextColumn Header="Country" Width="*" Binding="{Binding Country.Name}"
                                     ElementStyle="{StaticResource DataGridTextStyle}" CanUserSort="False"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="4" Grid.Column="1" Background="#FF151735">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="0.35*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Value" Style="{DynamicResource LabelStyle}" Margin="10,0,10,0"/>
            <TextBox Grid.Row="1" Grid.Column="0" Style="{DynamicResource TextBoxInputStyle}" Margin="10,0,10,0"
                 Text="{Binding CoinDisplayViewModel.CoinSearchDataViewModel.Value, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="0" Grid.Column="1" Content="Country" Style="{DynamicResource LabelStyle}" Margin="10,0,10,0"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Width="auto" IsEditable="True" Style="{DynamicResource ComboBoxInputStyle}" Margin="10,0,10,0"
                   ItemsSource="{Binding CoinDisplayViewModel.AllCountries, UpdateSourceTrigger=PropertyChanged}" 
                   DisplayMemberPath="Name"
                   SelectedItem="{Binding CoinDisplayViewModel.SelectedCountry, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="0" Grid.Column="2" Content="Currency" Style="{DynamicResource LabelStyle}" Margin="10,0,10,0"/>
            <ComboBox Grid.Row="1" Grid.Column="2" Width="auto" IsEditable="True" Style="{DynamicResource ComboBoxInputStyle}" Margin="10,0,10,0"
                   ItemsSource="{Binding CoinDisplayViewModel.AllCurrencies, UpdateSourceTrigger=PropertyChanged}"
                   DisplayMemberPath="Name"
                   SelectedItem="{Binding CoinDisplayViewModel.SelectedCurrency, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="0" Grid.Column="3" Content="Year" Style="{DynamicResource LabelStyle}" Margin="10,0,10,0"/>
            <TextBox Grid.Row="1" Grid.Column="3" Style="{DynamicResource TextBoxInputStyle}" Margin="10,0,10,0" 
                 Text="{Binding CoinDisplayViewModel.CoinSearchDataViewModel.Year, UpdateSourceTrigger=PropertyChanged}"/>

            <Grid Grid.Row="1" Grid.Column="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.35*"/>
                    <ColumnDefinition Width="0.35*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button  Grid.Row="0" Grid.Column="0" Background="White" Command="{Binding CoinDisplayViewModel.SearchCommand}">
                    <Image Source="/Images/SearchIcon.png"/>
                </Button>

                <Button  Grid.Row="0" Grid.Column="1" Background="White" Command="{Binding CoinDisplayViewModel.RefreshSearchCommand}">
                    <Image Source="/Images/RefreshIcon.png"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Page>
